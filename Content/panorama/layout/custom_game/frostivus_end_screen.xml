<root>
	<styles>
		<include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game/frostivus_end_screen.css" />
	</styles>
	<scripts>
        <include src="file://{resources}/scripts/custom_game/shared_scoreboard_updater.js" />
		<include src="file://{resources}/scripts/custom_game/frostivus_end_screen.js" />
	</scripts>
	<Panel class="EndScreenRoot">
		<Panel class="EndScreenWindow">
			<Panel id="Legend" class="Legend">
                <Label text="Team" />
				<Image id="PresentImage" class="ScoreImage" src="file://{images}/custom_game/present.jpg" />
                <Image id="SnowmanImage" class="ScoreImage" src="file://{images}/custom_game/snowman.jpg" />
                <Image id="TreeImage" class="ScoreImage" src="file://{images}/custom_game/tree.jpg" />
				<!--Label class="LegendPanel ScoreCol_Items" text="#custom_end_screen_legend_items" /-->
				<!--Label class="LegendPanel ScoreCol_Gold" text="#custom_end_screen_legend_gold" /-->
			</Panel>
            <Panel id="GoodGuys" class="Content">
                <Label text="Team Snowleopard"/>
				<Image id="GoodGuysPresent" class="ScoreImage" src="file://{images}/custom_game/check.png" />
                <Image id="GoodGuysSnowman" class="ScoreImage" src="file://{images}/custom_game/check.png" />
                <Image id="GoodGuysTree" class="ScoreImage" src="file://{images}/custom_game/check.png" />
			</Panel>
            <Panel id="BadGuys" class="Content">
                <Label text="Team Owl"/>
				<Image id="BadGuysPresent" class="ScoreImage" src="file://{images}/custom_game/x.png" />
                <Image id="BadGuysSnowman" class="ScoreImage" src="file://{images}/custom_game/x.png" />
                <Image id="BadGuysTree" class="ScoreImage" src="file://{images}/custom_game/check.png" />
                
			</Panel>
			<Panel id="TeamsContainer" />
		</Panel>
	</Panel>
