<root>
	<styles>
        <include src="file://{resources}/styles/dotastyles.css" />
		<include src="file://{resources}/styles/custom_game/frostivus_game_info.css" />
	</styles>
	<scripts>
        <include src="file://{resources}/scripts/custom_game/frostivus_game_info.js" />
	</scripts>
    <Panel class="FrostivusGameInfo">

		<Image id="TitleImage" src="file://{images}/custom_game/description_frostication.png" />

		<Label id="ConceptHeader" class="Header" text="#frostivus_game_info_header_concept" />
		<Label id="BriefDescription" text="#frostivus_brief_description" />
		<Label id="HowToPlayHeader" class="Header" html="true" text="#frostivus_game_info_header_how_to_play" />
		<Label id="Description" html="true" text="#frostivus_game_info_time" />
		
		<Label id="LocationHeader" class="Header" text="#frostivus_game_info_header_location" />
		<Label id="Location" text="#frostivus_game_info_location" />

		<Panel id="ListElement1" class="ListElement">
			<Image id="LocationImage1" class="ListIconImage" src="file://{images}/custom_game/endscreen/present.png" />
			<Label id="Location1_Title" class="Location" text="#frostivus_game_info_location1" />
		</Panel>
		<Label id="Location1_Text" text="#frostivus_game_info_location1_text" />
		<Image id="LocationImage1" class="ObjectiveImage" src="file://{images}/custom_game/description_present.png" />


		<Panel id="ListElement2" class="ListElement">
			<Image id="LocationImage2" class="ListIconImage" src="file://{images}/custom_game/endscreen/tree.png" />
			<Label id="Location2_Title" class="Location" text="#frostivus_game_info_location2" />
		</Panel>
		<Label id="Location2_Text" text="#frostivus_game_info_location2_text" />
		<Image id="LocationImage2" class="ObjectiveImage" src="file://{images}/custom_game/description_tree.png" />


		<Panel id="ListElement3" class="ListElement">
			<Image id="LocationImage3" class="ListIconImage" src="file://{images}/custom_game/endscreen/ward.png" />
			<Label id="Location3_Title" class="Location" text="#frostivus_game_info_location3" />
		</Panel>
		<Label id="Location3_Text" text="#frostivus_game_info_location3_text" />
		<Image id="LocationImage3" class="ObjectiveImage" src="file://{images}/custom_game/description_ward.png" />

		<Panel id="ListElement4" class="ListElement">
			<Image id="LocationImage4" class="ListIconImage" src="file://{images}/custom_game/endscreen/roshan.png" />
			<Label id="Location4_Title" class="Location" text="#frostivus_game_info_location4" />
		</Panel>
		<Label id="Location4_Text" text="#frostivus_game_info_location3_text" />
		<Image id="LocationImage4" class="ObjectiveImage" src="file://{images}/custom_game/description_present.png" />
					
	</Panel>
</root>
